generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @map("_id")
  username String @unique
  email    String @unique
  age      Int
  currency String

  income  Float
  savings Float?

  percentageGoal    Float?
  dreamGoal         DreamGoal?
  recurringExpenses RecurringExpense[]
  transactions      Transaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DreamGoal {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  userId   String   @unique
  name     String
  sum      Float
  progress Float
  date     DateTime
  user     User     @relation(fields: [userId], references: [id])
}

model RecurringExpense {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String
  name            String
  amount          Float
  nextPaymentDate DateTime
  user            User     @relation(fields: [userId], references: [id])
}

// -------------------------------------------------------------------------------

model Transaction {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String
  type        String
  category    String
  source      String
  amount      Float
  date        DateTime
  description String?
  user        User     @relation(fields: [userId], references: [id])
}

// -------------------------------------------------------------------------------

model AppData {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  categories String[]
  sources    String[]
}
